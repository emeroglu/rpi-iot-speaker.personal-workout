<Page
    x:Class="RPI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RPI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Canvas x:ConnectionId='1' x:Name="canvas" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1920" Height="1080">
            <CheckBox x:ConnectionId='2' x:Name="cbx18" Width="10" Height="10"></CheckBox>
            <Button x:ConnectionId='3' x:Name="btn18" Content="PIN 18" Canvas.Left="25"                   />
            <CheckBox x:ConnectionId='4' x:Name="cbx23" Width="10" Height="10" Canvas.Left="100"></CheckBox>
            <Button x:ConnectionId='5' x:Name="btn23" Content="PIN 23" Canvas.Left="125"                   />
            <CheckBox x:ConnectionId='6' x:Name="cbx24" Width="10" Height="10" Canvas.Left="200"></CheckBox>
            <Button x:ConnectionId='7' x:Name="btn24" Content="PIN 24" Canvas.Left="225"                   />
            <CheckBox x:ConnectionId='8' x:Name="cbx25" Width="10" Height="10" Canvas.Left="300"></CheckBox>
            <Button x:ConnectionId='9' x:Name="btn25" Content="PIN 25" Canvas.Left="325"                   />
            <MediaElement x:ConnectionId='10' x:Name="beatit" Source="Assets/BeatIt.mp3" AutoPlay="False"></MediaElement>
            <MediaElement x:ConnectionId='11' x:Name="billie" Source="Assets/BillieJean.mp3" AutoPlay="False"></MediaElement>
            <MediaElement x:ConnectionId='12' x:Name="wanna" Source="Assets/WannaBe.mp3" AutoPlay="False"></MediaElement>
            <MediaElement x:ConnectionId='13' x:Name="baby" Source="Assets/BabyBe.mp3" AutoPlay="False"></MediaElement>
            <MediaElement x:ConnectionId='14' x:Name="thriller" Source="Assets/Thriller.mp3" AutoPlay="False"></MediaElement>
        </Canvas>
    </Grid>
</Page>

